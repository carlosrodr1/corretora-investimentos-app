@model Investimentos.Web.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-950 to-slate-900 px-4 py-10">
    <div class="w-full max-w-md bg-white/10 rounded-2xl shadow-xl backdrop-blur-md p-8">
        <h2 class="text-3xl font-bold text-white text-center mb-6 drop-shadow">Bem-vindo de volta</h2>

        @if (ViewBag.Erro != null)
        {
            <div class="bg-red-500/80 text-white text-sm rounded p-2 mb-4 text-center">@ViewBag.Erro</div>
        }

        <form asp-action="Entrar" method="post" class="space-y-5">
            <div>
                <label class="block text-white font-medium">Email</label>
                <input asp-for="Email" type="email" class="w-full mt-1 px-4 py-2 rounded-lg bg-white/10 text-white placeholder-slate-300 border border-white/20 focus:outline-none focus:ring-2 focus:ring-cyan-400" placeholder="seu@email.com" required />
            </div>
            <div>
                <label class="block text-white font-medium">Senha</label>
                <input asp-for="Senha" type="password" class="w-full mt-1 px-4 py-2 rounded-lg bg-white/10 text-white placeholder-slate-300 border border-white/20 focus:outline-none focus:ring-2 focus:ring-cyan-400" placeholder="••••••••" required />
            </div>
            <button type="submit" class="w-full bg-gradient-to-r from-cyan-400 to-violet-500 text-white font-semibold py-2 px-4 rounded-lg mt-4 hover:opacity-90 transition">Entrar</button>
        </form>

        <p class="mt-6 text-center text-sm text-slate-300">
            Não tem conta?
            <a asp-action="Cadastrar" class="text-cyan-400 hover:underline">Cadastre-se</a>
        </p>
    </div>
</div>
