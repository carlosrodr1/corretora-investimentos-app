@model List<Investimentos.Web.ViewModel.OperacaoViewModel>

@{
    ViewData["Title"] = "Minhas Operações";
}

<div class="min-h-screen bg-gradient-to-br from-indigo-950 to-slate-900 px-4 py-10">
    <h2 class="text-4xl font-extrabold text-white mb-8 text-center drop-shadow-lg tracking-tight">Minhas Operações</h2>
    <div class="mb-6 text-right">
        <a href="/Operacoes/Cadastrar" class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition">
            + Nova Operação
        </a>
    </div>

    <div class="overflow-x-auto bg-white/10 rounded-2xl shadow-xl backdrop-blur-md p-6">
        <table class="min-w-full text-white text-sm md:text-base">
            <thead>
                <tr class="border-b border-slate-700">
                    <th class="py-2 text-left">Ativo</th>
                    <th class="py-2 text-left">Tipo</th>
                    <th class="py-2 text-right">Quantidade</th>
                    <th class="py-2 text-right">Preço Unit.</th>
                    <th class="py-2 text-right">Corretagem</th>
                    <th class="py-2 text-right">Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var op in Model)
                {
                    <tr class="border-b border-white/5 hover:bg-white/5 transition">
                        <td class="py-2">@op.AtivoCodigo</td>
                        <td class="py-2">@op.TipoOperacao</td>
                        <td class="py-2 text-right">@op.Quantidade</td>
                        <td class="py-2 text-right">R$ @op.PrecoUnitario.ToString("N2")</td>
                        <td class="py-2 text-right">R$ @op.Corretagem.ToString("N2")</td>
                        <td class="py-2 text-right">@op.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }

                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-slate-400 py-4">Nenhuma operação cadastrada</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
