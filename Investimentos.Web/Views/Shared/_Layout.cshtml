<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Investimentos.Web</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', Arial, sans-serif;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-950 to-slate-900">
    <header>
        <nav class="px-8 py-4 bg-white/10 backdrop-blur-xl rounded-b-2xl shadow-md flex justify-between items-center mb-8">
            <a class="text-2xl font-bold tracking-tight text-white hover:text-indigo-300 transition" asp-area="" asp-controller="Home" asp-action="Index">Investimentos.Web</a>
            <div class="flex gap-6">
                <a class="text-lg font-medium text-white hover:text-indigo-300 transition" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-lg font-medium text-white hover:text-indigo-300 transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-2">
        <main role="main" class="pb-10">
            @RenderBody()
        </main>
    </div>

    <footer class="pt-8 pb-4 text-center text-slate-300">
        &copy; 2025 - Investimentos.Web · <a asp-area="" asp-controller="Home" asp-action="Privacy" class="underline hover:text-indigo-300">Privacy</a>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
